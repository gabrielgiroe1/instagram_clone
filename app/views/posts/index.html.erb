<p style="color: green"><%= notice %></p>
<div class="d-flex justify-content-center mt-4">
  <h1>Posts</h1>
</div>
<div class="d-flex justify-content-center mt-4">
  <div id="posts">
    <% @posts.each do |post| %>
      <%= render post %>
      <p>
        <%= link_to "Show this post", post %>
      </p>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= link_to "New post", new_post_path %>
</div>

